
import os


appname = 'renderer'
libs = ['cef', 'cef_dll_wrapper', 'glog', 'gflags']
flags = ['-Werror', '-Wall']


srcs = '''
  renderer/app.cc
  renderer/handler.cc
  renderer/main.cc
  renderer/render_handler.cc
  renderer/request_handler.cc
'''


apppath = '#bin'
include_paths = ['#src', '#cef']
lib_paths = ['/usr/local/lib', '#cef', '#cef/obj.target']


env = Environment()
env.ParseConfig('pkg-config --cflags --libs gtk+-2.0')
include_paths.append(env['CPPPATH'])


env.Program(os.path.join(apppath, appname), Split(srcs), CPPPATH=include_paths, LIBS=libs, LIBPATH=lib_paths, CPPFLAGS=flags)
